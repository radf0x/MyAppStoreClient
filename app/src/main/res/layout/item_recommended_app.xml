<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical"
              android:padding="8dp">

    <com.fox.myappstore.widgets.CustomImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/app_icon_min_width"
        android:layout_height="@dimen/app_icon_min_height"
        app:placeholder="@color/platinum_half_transparent"
        app:roundedCornerRadius="10dp"
        app:scaleType="cropSquareRounded"/>

    <TextView
        android:id="@+id/tv_app_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/placeholder"
        android:textSize="@dimen/item_recommend_title_text_size"
    />

    <TextView
        android:id="@+id/tv_app_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/placeholder"
        android:textSize="@dimen/item_recommend_subtitle_text_size"/>
</LinearLayout>